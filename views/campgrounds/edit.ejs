<%- layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-8 offset-2">
        <h1>Edit campground</h1>
        <form id="frm-editCampground" action="/campgrounds/<%= camp._id %>?_method=PATCH" method="POST" novalidate class="needs-validation">
            <div class="mb-2">
                <label class="form-label"   for="title">Title: </label>
                <input class="form-control" type="text" name="campground[title]" id="title" value="<%= camp.title %>" required>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" type="text" name="campground[location]" id="location" value="<%= camp.location %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label"   for="description">Description</label>
                <textarea class="form-control" rows="3" name="campground[description]" id="description" required><%= camp.description %></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label"   for="image">Image URL: </label>
                <input class="form-control" type="text" name="campground[image]" id="image" value="<%= camp.image %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label"   for="price">Price: </label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input class="form-control" type="text" name="campground[price]" id="price" value="<%= camp.price %>" required>
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            

        </form>

        <div class="d-grid gap-1 mb-3">
            <button class="btn btn-primary" form="frm-editCampground">Update Campground</button>
            <a class="btn btn-outline-secondary" href="/campgrounds">Cancel and return</a>
        </div>

    </div>
</div>