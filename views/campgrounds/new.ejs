<%- layout('layouts/boilerplate') %>


<div class="row">
    <div class="col-8 offset-2">
        <h1>Register a new campground</h1>
        <form id="frm-newCampground" action="/campgrounds" method="POST" class="needs-validation" novalidate>
            <div class="mb-2">
                <label class="form-label"   for="title">Title: </label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
            </div>

            <div class="mb-3">
                <label class="form-label"   for="description">Description</label>
                <textarea class="form-control" rows="3" name="campground[description]" id="description" required></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label"   for="image">Image URL: </label>
                <input class="form-control" type="text" name="campground[image]" id="image" required>
            </div>

            <div class="mb-3">
                <label class="form-label"   for="price">Price: </label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input class="form-control" type="text" name="campground[price]" id="price" required>
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            

        </form>
        <div class="d-grid gap-1 mb-3">
            <button class="btn btn-primary" form="frm-newCampground">Save Campground</button>
            <a class="btn btn-outline-secondary" href="/campgrounds">Cancel and return</a>
        </div>
    </div>
</div>